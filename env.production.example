# 生產環境配置範例
# 請複製此檔案為 .env.production 並根據實際部署環境修改

# 資料庫設定
MONGODB_URI=mongodb://admin:your_secure_password@mongodb:27017/daycare_system?authSource=admin

# JWT 設定
JWT_SECRET=your_production_super_secret_jwt_key_here_change_this
JWT_EXPIRE=7d

# 伺服器設定
PORT=5000
NODE_ENV=production

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 通知服務設定
LINE_CHANNEL_ACCESS_TOKEN=your_production_line_channel_access_token
LINE_CHANNEL_SECRET=your_production_line_channel_secret

# 郵件設定
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_app_password

# 前端 URL (生產環境)
CLIENT_URL=https://your-domain.com
MOBILE_URL=https://your-mobile-domain.com

# 推播通知
FCM_SERVER_KEY=your_production_fcm_server_key

# 安全設定
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日誌設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log


